<assembly>
  <id>archive</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/main/R</directory>
      <includes>
        <include>*.R</include>
      </includes>
      <outputDirectory>${project.artifactId}/R</outputDirectory>
      <useDefaultExcludes>true</useDefaultExcludes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src</directory>
      <includes>
        <include>**</include>
      </includes>
      <outputDirectory>${project.artifactId}/java/src</outputDirectory>
      <useDefaultExcludes>true</useDefaultExcludes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/man</directory>
      <includes>
        <include>**</include>
      </includes>
      <outputDirectory>${project.artifactId}/man</outputDirectory>
      <useDefaultExcludes>true</useDefaultExcludes>
    </fileSet>

    <fileSet>
      <directory>${project.basedir}</directory>
      <includes>
        <include>pom.xml</include>
      </includes>
      <outputDirectory>${project.artifactId}/java</outputDirectory>
      <useDefaultExcludes>true</useDefaultExcludes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}</directory>
      <includes>
        <include>NAMESPACE</include>
        <include>DESCRIPTION</include>
      </includes>
      <outputDirectory>${project.artifactId}/</outputDirectory>
      <useDefaultExcludes>true</useDefaultExcludes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/target/dependencies</directory>
      <outputDirectory>${project.artifactId}/inst/java</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/target</directory>
      <includes>
        <include>${project.artifactId}-${project.version}-shaded.jar</include>
      </includes>
      <outputDirectory>${project.artifactId}/inst/java</outputDirectory>
      <useDefaultExcludes>true</useDefaultExcludes>
    </fileSet>
  </fileSets>
</assembly>
